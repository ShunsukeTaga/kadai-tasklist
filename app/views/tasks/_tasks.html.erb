
<ul class="nav nav-tabs nav-justified mb-3">
  <li class="nav-item"><p>Tasks <span class="badge bg-secondary"><%= @count_tasks %></span></p></li>
  <!--<li class="nav-item"><a href="#" class="nav-link">Followings</a></li>-->
  <!--<li class="nav-item"><a href="#" class="nav-link">Followers</a></li>-->
</ul>
<% if tasks.any? %>
  <ul class="list-unstyled mt-2">
    <% tasks.each do |task| %>
      <li class="d-flex">
        <div>
          <div>
            <span class="text-muted">posted at <%= task.created_at %></span>
          </div>
          <div>
            <p><%= link_to task.id, task %> : <%= task.content %> -> <%= task.status %></p>
          </div>
          <div>
            <% if current_user == task.user %>
              <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>