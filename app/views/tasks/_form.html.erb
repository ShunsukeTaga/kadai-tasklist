<%= form_with(model: task) do |f| %>
<% if task.errors.any? %>
<div id="errors_explanation">
  <ul>
    <% task.errors.full_messages.each do |content| %>
    <li><%= content %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= f.label :content, 'タスク' %>
<%= f.text_field :content %>

<%= f.label :status, 'ステータス' %>
<%= f.text_field :status %>

<%= f.submit '投稿' %>
<% end %>